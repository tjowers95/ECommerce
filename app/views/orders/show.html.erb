<h1>Your Order</h1>

<table>
  <tr>
    <th>Customer</th>
    <td><%= @order.user_id %></td>
  </tr>
  <tr>
    <th>Status:</th>
    <td><%= @order.status %></td>
  </tr>
  <tr>
    <th>Items:</th>
    <td><%= @order.order_items.count %></td>
  </tr>
  <tr>
    <th>Items</th>
    <th>Title</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Subtotal</th>
  </tr>
<% @order.order_items.each do |i| %>
<tr>
  <td><%= image_tag "products/#{i.product.image_url}"%></td>
  <td><%=i.product.title%></td>
  <td><%= link_to i.quantity, edit_order_item_path(i)%></td>
  <td><%=i.product.price%></td>
  <td><%= print_price i.subtotal %></td>
  <td><%= link_to 'Remove', i, method: :delete, data: { confirm: 'Are you sure?' } %></td>     
<% end %>
<tr>
  <th>Total</th>
  <td><%= print_price Order.find(params[:id]).total %></td>
</tr>
</table>
